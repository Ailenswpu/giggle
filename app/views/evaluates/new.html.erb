<%= form_for(@evaluate, url: product_evaluates_path(product_id: @product), method: :post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row">
    <div class="col-lg-6">
      <div class="col-md-5">
        <h4>评测产品: <%= @product.name %></h4>
        <hr>
        标题: 
        <%= f.text_field :title, placeholder: "请输入评测标题!", class: "form-control" %>
        <hr>
      </div>
      <div class="form-group">
      	<%= f.text_area :details, size: "60x10", placeholder: "请输入评测内容！", class: "form-control" %>
       </div>
       <hr>
       <div class="actions">
         <%= f.submit "确认提交", class: 'btn btn-primary' %>
       </div>
      <hr>
   </div>
  </div>
<% end %>
