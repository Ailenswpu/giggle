<%= paginate @message_items %>
<% if @message_items.any? %>
  <h4>评论</h4>
  <% @message_items.each do |message| %>
    <span>
      <%= message.user.try(:name) %>
    </span>,
    <small>
      <%= time_ago_in_words(message.created_at) %> 前发布.
    </small>
    <div>
      <%= simple_format(message.content) %>
      <% if current_user?(message.user) %>
        <%= link_to "删除", destroy_message_product_evaluate_path(message_id: message), method: :delete %>
      <% end %>
    </div>
    <hr>
  <% end %>
<% end %>
<%= paginate @message_items %>