<div class="row">
  <div class="col-lg-8">
    <h2>
      <%= @product.name %>
    </h2>
    <p>
      <i class="fa fa-quote-left"></i>
      <%= @product.description %>
    </p>
    <hr>
    <p>
      <i class="fa fa-clock-o"></i> 
      创建时间： <%= @product.created_at.strftime "%Y-%m-%d %H:%M:%S" %>
    </p>
    <hr>
    <p>
      <%= simple_format(@product.details) %>
    </p>
  </div>

  <div class="col-lg-4">
    <div class="well">
    </div>
  </div>
</div>
