<span>
  <%= message.user.try(:name) %>
</span>,
<small>
  <%= time_ago_in_words(message.created_at) %> 前发布.
</small>
<div>
  <%= simple_format(message.content) %>
  <% if current_user?(message.user) %>
    <%= link_to "修改", edit_message_product_path(message) %>
    <%= link_to "删除", destroy_message_product_path(message_id: message), method: :delete %>
  <% end %>
</div>
<hr>
