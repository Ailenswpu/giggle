<%= form_for(@message, url: admin_message_path(@message)) do |f| %>
  <% if @message.errors.any? %>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger">
          <h4><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h4>

          <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>
      </div>

    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= f.submit "确认提交", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

