<div class="page-header">
  <h2>
    新建留言
  </h2>
</div>
<%= form_for(@message, url: admin_messages_path) do |f| %>
  <% if @message.errors.any? %>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger">
          <h4><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h4>

          <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :content, "留言内容" %>
        <%= f.text_field :content, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :product_id, "产品选项" %>
        <%= f.select :product_id, options_from_collection_for_select(Product.all, :id, :name), class: "form-control" %>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= f.submit "确认提交", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>


