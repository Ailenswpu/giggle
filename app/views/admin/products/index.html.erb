<div class="page-header">
  <h2>
    产品管理
    <small class="pull-right"><%= link_to "创建新产品", new_admin_product_path, class: "btn btn-primary" %></small>
  </h2>
</div>

<section>
  <div class="row">
    <%= form_tag admin_products_path, method: "get" do %>
     <div class="row">
      <div class="col-xs-4">
       <%= label_tag "产品搜索:" %>
       <%= text_field_tag :key, "", placeholder: "产品名称", class: "form-control" %>
      </div>
     </div>
     <div class="row">
      <div class="col-md-8 price_range" >
        <%= text_field_tag :low_price, "", placeholder: "最低价", class: "form-control" %>-
        <%= text_field_tag :high_price, "", placeholder: "最高价", class: "form-control" %>
     </div>
      <%= submit_tag "Search", class: "btn btn-lg btn-primary btn-block"%>
    <% end %>
 </div>
</section>

<%= paginate @products %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>名称</th>
      <th>描述</th>
      <th>价格</th>
      <th>产品类</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, admin_product_path(product) %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.product_category.try(:name) %></td>
        <td>
          <%= link_to "编辑", edit_admin_product_path(product), class: "btn btn-primary btn-sm" %>
          <%= link_to "删除", admin_product_path(product, page: params[:page]), class: "btn btn-danger btn-sm", data: { confirm: "请问您确定要删除吗？" }, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products %>