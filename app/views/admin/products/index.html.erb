<div class="page-header">
  <h2>
    产品管理
    <small class="pull-right"><%= link_to "创建新产品", new_admin_product_path, class: "btn btn-primary" %></small>
  </h2>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>名称</th>
      <th>描述</th>
      <th>价格</th>
      <th>详情</th>
      <th>产品类</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.details %></td>
        <td><%= product.product_category.try(:name) %></td>
        <td>
          <%= link_to "编辑", edit_admin_product_path(product), class: "btn btn-primary btn-sm" %>
          <%= link_to "删除", admin_product_path(product), class: "btn btn-danger btn-sm", data: { confirm: "请问您确定要删除吗？" }, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
