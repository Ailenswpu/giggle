<div class="page-header">
  <h2>
    产品分类管理
    <small class="pull-right"><%= link_to "创建新产品分类", new_admin_product_category_path, class: "btn btn-primary" %></small>
  </h2>
</div>
<%= paginate @product_categories %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>类别</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.name %></td>
        <td>
          <%= link_to "查看产品", admin_product_category_path(product_category), class: "btn btn-primary btn-sm" %>
          <%= link_to "编辑", edit_admin_product_category_path(product_category), class: "btn btn-primary btn-sm" %>
          <%= link_to "删除", admin_product_category_path(product_category, page: params[:page]), class: "btn btn-danger btn-sm", confirm: "请问您确定要删除吗？", method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @product_categories %>
