<%= render "navbar" %>

<div class="user_info_evaluates">
  <% @evaluates.each do |evaluate| %>
    <div class="evaluate_item">
      <h4><%= link_to evaluate.title, product_evaluate_path(evaluate.product, evaluate) %></h4>
      <small>
        <i class="fa fa-bullseye"></i> 
        <%= time_ago_in_words(evaluate.created_at) %>前发布 
        <% if can? :update, evaluate %>
          <%= link_to fa_icon("pencil-square-o"), edit_product_evaluate_path(evaluate.product, evaluate) %>
        <% end %>
        <%if can? :destroy, evaluate %>
          <%= link_to fa_icon("trash-o"), product_evaluate_path(evaluate.product, evaluate), date: { confirm: "请问您确定要删除吗？" }, method: :delete %>
        <% end %>
      </small>
      <p class="evaluate_details_abbr"><%= strip_tags(evaluate.details).truncate(100) %></p>
    </div>
  <% end %>
</div>
