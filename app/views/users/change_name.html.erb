<div class="list-group-item active ">修改用户名</div>
  <%= form_for(current_user, url: update_name_user_path, method: :patch) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="col-xs-6 col-sm-8">
      <p>原用户名: <%= current_user.name %></p>
      <%= f.label "请输入新用户名:" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label "请输入密码:" %>
      <%= f.password_field :password, class: "form-control" %>
      <hr>
      <p><%= f.submit "提交修改", class: "btn btn-primary" %><p>
    </div>
  <% end %>
<%= content_for :sidebar do %>
  <%= render 'layouts/shared/user_them' %>
<% end %> 