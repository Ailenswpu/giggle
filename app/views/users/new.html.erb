<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">欢迎注册帐号</h3>
      </div>
      <div class="panel-body">
        <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <fieldset>
            <div class="form-group">
              <%= f.text_field :email, placeholder: "邮箱", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :name, placeholder: "名称", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, placeholder: "密码", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, placeholder: "确认密码", class: "form-control" %>
            </div>
            
            <%= f.submit "提交", class: "btn btn-lg btn-primary btn-block", disable_with: "正在提交..." %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>