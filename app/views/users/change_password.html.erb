<div class="list-group-item active ">修改登录密码</div>
  <%= form_for(current_user, url: update_password_user_path, method: :patch) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="col-xs-6 col-sm-8">
      <%= f.label "请输入旧密码:" %>
      <%= f.password_field :old_password, class: "form-control" %>
      <%= f.label "请输入新密码:" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label "请再次输入新密码:" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <hr>
      <p><%= f.submit "提交修改", class: "btn btn-primary" %><p>
    </div>
  <% end %>
<%= content_for :sidebar do %>
  <%= render 'layouts/shared/user_them' %>
<% end %> 