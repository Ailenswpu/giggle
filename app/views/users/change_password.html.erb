<%= content_for :sidebar do %>
  <%= render 'layouts/shared/user_them' %>
<% end %> 

<div class="user_info_navbar menu_list">
  <ul class="list-inline">
    <li>
      <i class="fa fa-comment-o"></i>
    </li>
    <li>
      <%= link_to "修改用户信息", edit_user_path(current_user) %>
    </li>
    <li> / </li>
    <li class="active">
      <%= link_to "修改登录密码", change_password_user_path(current_user) %>
    </li>
  </ul>
</div>

<div class="user_edit_info">
  <div class="row">
    <%= form_for current_user, url: update_password_user_path(current_user), method: :patch, html: {class: "form-horizontal"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= label_tag(:old_password, "请输入旧密码：", class: "col-sm-3 control-label") %>
        <div class="col-sm-7">
          <%= f.password_field :old_password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag(:password, "请输入新密码：", class: "col-sm-3 control-label") %>
        <div class="col-sm-7">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag(:password_confirmation, "请再次输入新密码：", class: "col-sm-3 control-label") %>
        <div class="col-sm-7">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <hr>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
          <%= f.submit "提交修改", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
