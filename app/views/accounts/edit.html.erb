<%= content_for :sidebar do %>
  <%= render 'layouts/shared/user_them' %>
<% end %> 

<%= render "account_edit_navbar" %>

<div class="user_edit_info">
  <%= form_for @user, url: account_path, method: :patch, html: {class: "form-horizontal"} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <p class="form-control-static">
          <%= @user.email %>
        </p>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.text_area :description, class: "form-control" %>
        <span class="help-block">0~140个字符</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <div class="col-sm-7">
        <%= f.password_field :password, class: "form-control" %>
        <span class="help-block">修改信息后，请输入密码</span>
      </div>
    </div>
    <hr>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <%= f.submit "提交修改", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
