<div id="navbar" class="row">
  <div class="col-md-12">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: "navbar-brand logo_text" do %>
        <h4 class="pull-left">
          Giggle
          <br>
          Free
        </h4>
      <% end %>
    </div>

    <div class="main_nav navbar-collapse navbar-ex1-collapse collapse">
      <ul class="navigation list-inline pull-right">
        <% if signed_in? %>
          <li><%= link_to "后台管理", admin_root_path %></li>
          <li><%= link_to "您好，#{current_user.name}", current_user %></li>
          <li>
            <%= link_to user_sign_out_path, method: "delete" do %>
              <i class="fa fa-sign-out"></i>
              登出
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to user_sign_in_path do %>
              <i class="fa fa-sign-in"></i>
              登入
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
