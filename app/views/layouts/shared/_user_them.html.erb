<div id="user_picture">
  <div class="user_picture">
    <%= image_tag @user.find_avatar.try(:picture_url, :mini), class: "img-rounded" %>
  </div>
  <h5>
    <%= @user.name %>
  </h5>
</div>

<div id="user_menu" class="list-group">
  <%= link_to "用户信息", @user, class: "list-group-item active" %>
  <%= link_to "修改密码", change_password_user_path, class: "list-group-item" %>
  <%= link_to "修改用户名", change_name_user_path, class: "list-group-item" %>
  <%= link_to "我的图片", user_picture_path(current_user), class: "list-group-item" %>
  <%= link_to "所有用户", users_path, class: "list-group-item" %>
</div>
